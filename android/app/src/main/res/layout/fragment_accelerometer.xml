<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titleValuesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/baseMargin"
        android:text="@string/sensor_values"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/xTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/baseMargin"
        android:layout_marginTop="@dimen/baseMargin"
        android:text="@string/x"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleValuesTextView" />

    <TextView
        android:id="@+id/yTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/y"
        app:layout_constraintEnd_toEndOf="@id/xTitleTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@id/xTitleTextView"
        app:layout_constraintTop_toBottomOf="@id/xTitleTextView" />

    <TextView
        android:id="@+id/zTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/z"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@id/xTitleTextView"
        app:layout_constraintTop_toBottomOf="@id/yTitleTextView" />

    <TextView
        android:id="@+id/xValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/baseMargin"
        android:textColor="@color/colorRed"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/xTitleTextView"
        app:layout_constraintStart_toEndOf="@id/xTitleTextView"
        tools:text="xValues" />

    <TextView
        android:id="@+id/yValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/baseMargin"
        android:textColor="@color/colorYellow"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/yTitleTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/yTitleTextView"
        tools:text="yValues" />

    <TextView
        android:id="@+id/zValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/baseMargin"
        android:textColor="@color/colorGreen"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/zTitleTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/zTitleTextView"
        tools:text="zValues" />

</androidx.constraintlayout.widget.ConstraintLayout>